{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/components/toolbar.js",
    "src/store/index.js",
    "src/plugins/element.js",
    "src/directive.js",
    "src/http.js",
    "src/mixin.js",
    "src/components/Tinymce/toolbar.js",
    "src/components/markdown/defalut-config.js",
    "src/components/Tinymce/plugins.js"
  ],
  "exclude": [
    "node_modules"
  ]
}